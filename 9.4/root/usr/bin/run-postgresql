#!/bin/bash

set -eu

source "${CONTAINER_SCRIPTS_PATH}/common.sh"

set_pgdata
check_env_vars
generate_passwd_file
if [ -v POSTGRESQL_CONFIG_URL ]; then
  get_postgresql_config
else
  generate_postgresql_config
fi

if [ ! -f "$PGDATA/postgresql.conf" ]; then
  initialize_database
fi

set_passwords

unset_env_vars
exec postgres "$@"
